#:kivy 2.0.0

<MyWidget>:
    orientation: 'vertical'
    RelativeLayout:
        id: valid_region
        widget:
            id: bola
            size_hint: None,None
            size: 50,50
            canvas:
                Color:
                    rgb: 1,0,0
                Ellipse:
                    pos: self.pos
                    size: self.size
    BoxLayout:
        orientation:'horizontal'
        size_hint: (1,0.1)
        Button:
            id: bt_move
            text: 'Mover'
        BoxLayout:
            orientation: 'vertical'
            Label:
                id: lb1
                text: 'Velocidade'
                size_hint: (1,0.5)
            Slider: 
                id: slider